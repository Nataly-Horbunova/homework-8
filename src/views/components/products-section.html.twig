<section class="products-section">
	<div class="container products-section__container">
		{% for product in data.products %}
			{% include '@components/product.html.twig' with {
    		product,
			reversed: loop.index % 2 == 0,
      	} %}
		{% endfor %}

		{% include '@components/button.html.twig' with {
				text: 'View more products',
        		style: 'shaded', 
				class: 'products-section__more-btn'
    		}%}
			</div>
</section>
